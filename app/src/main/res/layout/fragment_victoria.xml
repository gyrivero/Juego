<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VictoriaFragment" >

    <TextView
        android:id="@+id/ganadorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Felicitaciones!"
        android:textColor="#182881"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32" />

    <TextView
        android:id="@+id/nombreGanadorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gonzalo ha ganado!"
        android:textColor="#182881"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ganadorTV"
        app:layout_constraintStart_toStartOf="@+id/ganadorTV"
        app:layout_constraintTop_toBottomOf="@+id/ganadorTV"
        app:layout_constraintVertical_bias="0.04000002" />

    <Button
        android:id="@+id/menuPrincipalGBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu Principal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreGanadorTV"
        app:layout_constraintVertical_bias="0.32999998" />

    <Button
        android:id="@+id/volverAJugarVBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver a Jugar"
        app:layout_constraintBottom_toTopOf="@+id/menuPrincipalGBtn"
        app:layout_constraintEnd_toEndOf="@+id/ganadorTV"
        app:layout_constraintStart_toStartOf="@+id/ganadorTV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96" />

    <Button
        android:id="@+id/salirGBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/menuPrincipalGBtn"
        app:layout_constraintStart_toStartOf="@+id/menuPrincipalGBtn"
        app:layout_constraintTop_toBottomOf="@+id/menuPrincipalGBtn"
        app:layout_constraintVertical_bias="0.07" />

</androidx.constraintlayout.widget.ConstraintLayout>